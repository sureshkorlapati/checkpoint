{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "applayer/checkpoint-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "applayer/checkpoint-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "applayer/checkpoint-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "applayer/checkpoint-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 8080,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]
        }
    ]
}